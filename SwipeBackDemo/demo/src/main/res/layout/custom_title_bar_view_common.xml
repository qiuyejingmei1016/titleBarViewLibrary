<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title_bar_view"
        android:layout_width="match_parent"
        android:layout_height="45.33dp"
        android:background="@color/title_bar_red_color">
    <TextView
            android:id="@+id/title_text"
            style="@style/title_bar_title_text"/>
    <ImageButton
            android:id="@+id/title_left_img_btn"
            style="@style/title_bar_left_img_btn"/>
    <ImageButton
            android:id="@+id/title_right_img_btn"
            style="@style/title_bar_right_img_btn"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#dddddd"/>
</RelativeLayout>



