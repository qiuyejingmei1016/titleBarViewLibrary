<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/title_bar_view"
            layout="@layout/title_bar_view"/>
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/title_bar_view">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:orientation="vertical">
                <Button
                    android:id="@+id/btn_white_status_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="解决白色状态栏字体(适配miui6+或者flymeOS4+)"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/btn_set_status_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="导航栏设置"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/btn_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="彩色状态栏和导航栏"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/btn_full_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="全屏图片"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/btn_shape_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="仿QQ状态栏和标题栏渐变色"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/btn_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="结合侧边栏使用"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/btn_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="结合webView使用"
                    android:textAllCaps="false"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/btn_key_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="解决EditText和软键盘的问题"
                    android:textAllCaps="false"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_status_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:text="隐藏状态栏"
                        android:textAllCaps="false"
                        android:textSize="16sp"/>
                    <Button
                        android:id="@+id/btn_navigation_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:text="隐藏导航栏"
                        android:textAllCaps="false"
                        android:textSize="16sp"/>

                    <Button
                        android:id="@+id/btn_bar_hide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:text="隐藏全部"
                        android:textAllCaps="false"
                        android:textSize="16sp"/>

                    <Button
                        android:id="@+id/btn_bar_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:text="恢复显示"
                        android:textAllCaps="false"
                        android:textSize="16sp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:onClick="onClick"
                    android:text="有导航栏的情况，Activity全屏显示"
                    android:textAllCaps="false"
                    android:textSize="16sp"/>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <include layout="@layout/drawer_left"/>
</android.support.v4.widget.DrawerLayout>

